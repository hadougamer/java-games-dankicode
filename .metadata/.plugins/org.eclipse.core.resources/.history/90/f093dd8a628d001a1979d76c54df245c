package inicio_logica_games;

public class Game implements Runnable {
	public boolean isRunning;
	
	public static void main ( String[] args ) {
		Gama game = new Game;
	}

	// Update every loop cycle
	public void tick() {
		System.out.println("tick ...");
	}
	
	// Display things
	public void render() {
		System.out.println("render  ...");
	}
	
	@Override
	public void run() {
		while( isRunning ) {
			tick();
			render();
		}
	}
}
